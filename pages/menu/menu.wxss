.container { padding: 20rpx 20rpx 150rpx 20rpx; background-color: #f8f8f8; min-height: 100vh; }
.header { font-size: 40rpx; font-weight: bold; text-align: center; margin-bottom: 40rpx; padding-top: 20rpx; }

.menu-item { 
  display: flex; justify-content: space-between; align-items: center;
  padding: 30rpx; background: white; margin-bottom: 20rpx; border-radius: 15rpx;
}

.dish-name { font-size: 32rpx; color: #333; }

.stepper { display: flex; align-items: center; }
.plus, .minus {
  width: 60rpx; height: 60rpx; line-height: 54rpx; text-align: center;
  border-radius: 50%; border: 2rpx solid #07c160; font-size: 40rpx; font-weight: bold;
}
.plus { background: #07c160; color: white; }
.minus { color: #07c160; background: white; }
.minus.disabled { border-color: #ccc; color: #ccc; }
.count { margin: 0 20rpx; font-size: 32rpx; width: 40rpx; text-align: center; }

.footer { 
  position: fixed; bottom: 0; left: 0; right: 0; 
  padding: 30rpx; background: white; display: flex; 
  align-items: center; justify-content: space-between;
  box-shadow: 0 -5rpx 10rpx rgba(0,0,0,0.05);
}
.submit-btn { background: #07c160; color: white; margin: 0; font-size: 28rpx; padding: 0 40rpx; }