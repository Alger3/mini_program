.scroll-area {
  height: 100vh;
  width: 100%;
}

.home-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  min-height: 100vh;
  /* 关键点 1：增加顶部留白。40rpx 是基础，env 是适配刘海 */
  padding-top: calc(env(safe-area-inset-top) + 60rpx); 
  background-size: cover;
  background-position: center;
}

.top-banner-view {
  width: 100%;
  /* 关键点 2：如果 56.25vw 还是挡字，可以试着调高到 65vw 或 70vw */
  height: 60vw; 
  
  /* 关键点 3：改用 contain 确保图片比例完整，文字不被拉伸或裁切 */
  background-size: contain; 
  background-position: center top; 
  background-repeat: no-repeat;
  
  flex-shrink: 0;
  margin-bottom: 20rpx;
}

.button-group {
  width: 85%; /* 稍微加宽一点，视觉更协调 */
  padding-bottom: 60rpx; /* 底部留出呼吸空间 */
}

.nav-btn {
  width: 100% !important; /* 强制覆盖微信默认按钮宽度 */
  margin-bottom: 30rpx;
  padding: 25rpx 0;
  border-radius: 20rpx;
  font-size: 34rpx;
  font-weight: bold;
  /* 加一个微弱的阴影，让按钮在背景上更有立体感 */
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1); 
}

/* 颜色保持你的设定 */
.menu-btn { background: #07c160; color: white; }
.bill-btn { background: #10aeff; color: white; }
