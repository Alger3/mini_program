/* 基础容器 */
.container { width: 100%; height: 100vh; position: relative; }

/* 固定背景 */
.fixed-bg {
  position: fixed; top: 0; left: 0; width: 100vw; height: 100vh;
  z-index: -1; background-size: cover; background-position: center;
}

/* 导航栏避让 */
.custom-nav {
  position: fixed; top: 0; left: 0; z-index: 1000;
  display: flex; align-items: center; padding-left: 30rpx;
}
.back-btn {
  width: 60rpx; height: 60rpx; display: flex; align-items: center; justify-content: center;
  background: rgba(255, 255, 255, 0.5); border-radius: 50%;
}
.back-icon { font-size: 40rpx; font-weight: bold; color: #333; }

/* 滚动区域 */
.scroll-area { height: 100vh; padding: 0 30rpx; box-sizing: border-box; }
.header { font-size: 40rpx; font-weight: bold; color: #333; padding: 40rpx 0; text-align: center; }
.section-title { font-size: 32rpx; font-weight: bold; margin-bottom: 20rpx; color: #444; }

/* 快速记录横向滚动 */
.sports-scroll-view {
  width: 100%; white-space: nowrap; display: flex; flex-direction: row;
  margin-bottom: 40rpx; padding: 10rpx 0;
}
.sport-item {
  display: inline-flex; flex-direction: column; align-items: center; justify-content: center;
  width: 160rpx; height: 160rpx; background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(5px); border-radius: 20rpx; margin-right: 20rpx;
  flex-shrink: 0; font-size: 26rpx; box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
}
.sport-icon { font-size: 50rpx; margin-bottom: 10rpx; }

/* 历史列表 */
.history-item {
  background: rgba(255, 255, 255, 0.5); padding: 30rpx; border-radius: 20rpx;
  margin-bottom: 20rpx; display: flex; justify-content: space-between; align-items: center;
}
.item-type { font-weight: bold; font-size: 30rpx; display: block; }
.item-date { font-size: 24rpx; color: #888; }
.item-duration { color: #c7c73b; font-weight: bold; }
.bottom-spacer { height: 60rpx; }

/* 弹窗样式 */
.modal-mask {
  position: fixed; top: 0; left: 0; width: 100%; height: 100%;
  background: rgba(0, 0, 0, 0.4); z-index: 2000; display: flex; align-items: center; justify-content: center;
}
.modal-content {
  width: 80%; background: rgba(255, 255, 255, 0.95); backdrop-filter: blur(20px);
  border-radius: 40rpx; padding: 45rpx; box-shadow: 0 20rpx 60rpx rgba(0,0,0,0.1);
}
.modal-title { text-align: center; font-size: 36rpx; font-weight: bold; margin-bottom: 40rpx; }
.picker-row { display: flex; align-items: center; justify-content: space-between; margin-bottom: 50rpx; }
.time-box { background: #f0f0f0; padding: 20rpx 25rpx; border-radius: 15rpx; font-size: 28rpx; color: #333; }
.to-text { color: #999; font-size: 26rpx; }
.modal-btns { display: flex; justify-content: space-between; }
.modal-btns button { width: 45%; font-size: 30rpx; border-radius: 50rpx; }
.btn-cancel { background: #eee; color: #666; }
.btn-confirm { background: #0d7ea0; color: #fff; }
/* 新增输入框区域样式 */
.input-section {
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.type-input {
  width: 100%;
  height: 85rpx;
  background: #f5f5f5;
  border-radius: 15rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  border: 1rpx solid #e0e0e0;
}

.history-item:active {
  /* 点击时背景变暗一点，透明度从 0.6 变为 0.4 */
  background: rgba(220, 220, 220, 0.4); 
  
  /* 同时让卡片轻微缩小，增加物理点击感 */
  transform: scale(0.98);
  
  /* 过渡效果，让变色过程更平滑 */
  transition: all 0.1s ease;
}

/* 之前已有的 modal 样式保持不变... */

/* 隐藏滚动条 */
::-webkit-scrollbar { width: 0; height: 0; color: transparent; }