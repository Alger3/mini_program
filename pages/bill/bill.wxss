.bill-container {
  min-height: 100vh;
  position: relative;
}

/* 核心：固定背景层 */
.fixed-bg {
  position: fixed;   /* 绝对固定在屏幕 */
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: -1;       /* 确保它在所有内容的最底层 */
  
  /* 刚才那些导致放大的属性从 .bill-container 挪到这里 */
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  /* 如果是渐变色，也可以写在这里 */
  background-image: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

.record-list {
  flex: 1;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.header {
  padding: 40rpx 0;
  font-size: 38rpx;
  font-weight: bold;
  text-align: center;
}

/* --- 修改后的单条记录框框 --- */
.bill-card {
  background: rgba(255, 255, 255, 0.5); padding: 30rpx; border-radius: 20rpx;
  margin-bottom: 20rpx; display: flex; justify-content: space-between; align-items: center;
}

.card-left { display: flex; flex-direction: column; }
.bill-name { 
  font-size: 34rpx; 
  color: #050505; /* 稍微调深，防止背景透过来干扰阅读 */
  font-weight: 600; 
  margin-bottom: 8rpx; 
}

.bill-time { 
  font-size: 24rpx; 
  color: #4b4a4a; /* 调深一点 */
}

/* 底部栏也建议做成半透明，保持风格统一 */
.footer-bar {
  position: fixed;
  bottom: 0; left: 0; right: 0;
  padding: 30rpx 40rpx calc(30rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.8); /* 底部栏半透明 */
  backdrop-filter: blur(15px);
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
  z-index: 10;
}
.bill-amount { font-size: 36rpx; color: #ff4d4f; font-weight: bold; }

.bottom-spacer { height: 180rpx; }

.add-btn {
  background: #10aeff !important;
  color: white !important;
  border-radius: 50rpx;
  font-weight: bold;
}

/* 弹窗样式 */
.mask { position: fixed; top: 0; bottom: 0; left: 0; right: 0; background: rgba(0,0,0,0.5); z-index: 1000; }
.popup { position: fixed; bottom: -100%; left: 0; right: 0; background: white; transition: all 0.3s ease; z-index: 1001; border-radius: 30rpx 30rpx 0 0; padding: 40rpx; }
.popup-show { bottom: 0; }
.popup-header { font-size: 32rpx; font-weight: bold; text-align: center; margin-bottom: 40rpx; }
.input-group { margin-bottom: 30rpx; }
.label { font-size: 26rpx; color: #666; margin-bottom: 10rpx; display: block; }
.my-input { background: #f5f5f5; height: 80rpx; padding: 0 20rpx; border-radius: 12rpx; }
.popup-buttons { display: flex; gap: 20rpx; margin-top: 40rpx; padding-bottom: env(safe-area-inset-bottom); }
.cancel-btn { flex: 1; background: #eee; color: #666; border-radius: 40rpx; }
.confirm-btn { flex: 1; background: #10aeff; color: white; border-radius: 40rpx; }

/* --- 账单卡片点击反馈 --- */
.bill-card:active {
  /* 点击时背景变暗一点，透明度从 0.6 变为 0.4 */
  background: rgba(220, 220, 220, 0.4); 
  
  /* 同时让卡片轻微缩小，增加物理点击感 */
  transform: scale(0.98);
  
  /* 过渡效果，让变色过程更平滑 */
  transition: all 0.1s ease;
}